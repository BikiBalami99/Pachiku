generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id            String    @id @default(cuid())
    email         String    @unique
    firstName     String
    lastName      String
    avatar        String?
    username      String
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt
    pachikus      Pachiku[]
    comments      Comment[]
    likedPachikus Like[]
}

model Pachiku {
    id        String    @id @default(uuid())
    pachiku   String    @db.VarChar(256)
    user      User      @relation(fields: [userId], references: [id])
    userId    String
    createdAt DateTime  @default(now())
    likes     Int       @default(0)
    comments  Comment[]
    likedBy   Like[]
}

model Like {
    id           String  @id @default(uuid())
    likedBy      User    @relation(fields: [userId], references: [id])
    userId       String
    likedPachiku Pachiku @relation(fields: [pachikuId], references: [id])
    pachikuId    String

    @@index([userId])
    @@index([pachikuId])
}

model Comment {
    id        String   @id @default(uuid())
    comment   String   @db.VarChar(256)
    pachiku   Pachiku  @relation(fields: [pachikuId], references: [id])
    pachikuId String
    user      User     @relation(fields: [userId], references: [id])
    userId    String
    createdAt DateTime @default(now())

    @@index([userId])
    @@index([pachikuId])
}
